/* pages/holland/index.wxss */
.videoCSS{
 width: 100%;
 margin-top: 1vh;
 height: 180px;
}
.video_cover{
  width:100%;
  height:100%;
  position:relative;
 }
 .video_play_icon{
  position:absolute;
  left:50%;
  top:50%;
  transform:translate(-50%,-50%);
  width:40px;
  height:40px;
  z-index:5
 }
 .video_bg_black{
  position:absolute;
  left:0;
  top:0;
  bottom:0;
  right:0;
  background:rgba(0,0,0,.5);
 }
 .video_cover_txt{
  display:flex;
  justify-content: flex-end;
  align-items: center;
  text-align:right;
  color: #fff;
  font-size: 28rpx;
  margin-top: 35rpx;
  height: 90rpx;
 }
 .video_icon_lock{
  width:30rpx;
  height: auto;
  margin:0 30rpx;
 }
 .video_txt{
  margin:10rpx auto;
 }