<view class="create clear">
  <view class="flag">
    <view class="flagName">
      <image src="../../images/flag.png"></image>
      <view class="afterFlag">Flag名称</view>
    </view>
    <view class="textarea">
      <textarea id="write" placeholder="请输入您的目标"></textarea>
      <view class="setFont">
        <view class="alert">0</view> /32
      </view>
    </view>
  </view>

  <view class="flag">
    <view class="flagName ">
      <image src="../../images/day.png"></image>
