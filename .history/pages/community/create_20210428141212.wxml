        <button class="cu-btn round bg-yellow">88积分</button>
      </view>

      <view class="soloMoney">
        <button class="cu-btn round bg-yellow">188积分</button>
      </view>
      <view class="soloMoney">
        <button class="cu-btn round bg-yellow">888</button>
      </view>
      <view class="soloMoney">
        <button class="cu-btn round bg-yellow">20积分</button>
      </view>
      
    </view>
  </view>
