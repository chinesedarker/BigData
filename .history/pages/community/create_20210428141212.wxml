      <view class="fr">
        <button class="cu-btn round bg-white sm" id="ed">每天</button>
        <button class="cu-btn round bg-white sm" id="ew">每周</button>
      </view>
      <view class="day">
        <button class="cu-btn bg-white dayBtn">14天</button>
        <button class="cu-btn bg-white dayBtn">21天</button>
